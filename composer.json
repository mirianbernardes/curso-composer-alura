{
    "name": "mirianbernardes/buscador-cursos",
    "description": "Projeto que busca os cursos da Alura",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Mirian Bernardes Santana",
            "email": "mirianbernardes@gmail.com"
        }
    ],
    "require": {
        "guzzlehttp/guzzle": "^7.4",
        "symfony/dom-crawler": "^5.4",
        "symfony/css-selector": "^5.4"
    },
    "autoload": {
        "classmap": ["./Teste.php"],
        "files": ["./functions.php"],
        "psr-4": {
            "Alura\\BuscadorDeCursos\\" : "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^5.5",
        "squizlabs/php_codesniffer": "^3.6",
        "phan/phan": "^5.3"
    },
    "scripts": {
        "teste":"phpunit tests\\TestBuscadorDeCursos.php ",
        "pcs":"phpcs --standard=PSR12 src/Buscador.php",
        "dir":"ls",
        "check":[
            "@pcs",
            "@teste"
        ],
        "post-update-cmd": [
            "@teste"
        ]
    },
    "scripts-descriptions": {
        "check": "Roda as verificações do código. PHAN, PHPCS e PHPUNIT"
    },
    "bin": "[aulaComposer.php]"
}